@{
    ViewData["Title"] = "Find customer";
}

<h4>Find details about a specific customer.</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label class="control-label">Customer:</label>
                <select class="form-control" name="customerId" asp-items="ViewBag.CustomerId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back</a>
</div>